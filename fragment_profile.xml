<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >


    <RelativeLayout
        android:id="@+id/toolbar_profile2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/txthome_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Detail"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/foto"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="200dp"
        android:layout_marginRight="10dp"
        android:layout_height="100dp"
        android:layout_below="@+id/toolbar_profile2"
        android:src="@drawable/me"/>

    <TextView
        android:id="@+id/home_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txthome_nama" android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar_profile2"
        android:layout_toEndOf="@+id/foto"
        />
    <TextView
        android:id="@+id/desc_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txthome_desc"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/home_nama"
        android:layout_toRightOf="@+id/foto"
        />


    <RelativeLayout
        android:id="@+id/toolbar_profile3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/foto"

        >
        <TextView
            android:id="@+id/txthome_bot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find me"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/maps"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/maps"
        android:layout_below="@+id/toolbar_profile3"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/toolbar_profile4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/maps"
        >
        <TextView
            android:id="@+id/txth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/whatssap"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/toolbar_profile4"
        android:background="@drawable/whatsapp"

        />

    <ImageView
        android:id="@+id/ig"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/toolbar_profile4"
        android:layout_toRightOf="@+id/whatssap"
        android:background="@drawable/instagram"

        />

    <ImageView
        android:id="@+id/google"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/toolbar_profile4"
        android:layout_toRightOf="@+id/ig"
        android:background="@drawable/mail"

        />









</RelativeLayout>