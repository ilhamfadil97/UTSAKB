<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5">

   <RelativeLayout
       android:id="@+id/toolbar_home"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/colorPrimary"
       >
    <TextView
        android:id="@+id/txthome_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ffffff"
        />

   </RelativeLayout>

    <ImageView
        android:id="@+id/foto"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="70dp"
        android:layout_marginRight="10dp"
        android:layout_height="70dp"
        android:layout_below="@+id/toolbar_home"
        android:src="@drawable/me"/>

        <TextView
            android:id="@+id/home_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txthome_nama" android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@+id/toolbar_home"
            android:layout_toEndOf="@+id/foto"
            />
        <TextView
            android:id="@+id/desc_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txthome_desc"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@+id/home_nama"
            android:layout_toRightOf="@+id/foto"
            />


    <RelativeLayout
        android:id="@+id/toolbar_home2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/foto"
        >
        <TextView
            android:id="@+id/txthome_bot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interest"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            />

    </RelativeLayout>
        <TextView
            android:id="@+id/hobby_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txthome_hobby"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@+id/toolbar_home2"
            android:layout_toRightOf="@+id/foto"
            />
        <TextView
            android:id="@+id/interest_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txthome_interest"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@+id/hobby_text"
            android:layout_toRightOf="@+id/foto"
            />
        <TextView
            android:id="@+id/Cita_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txthome_cita"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@+id/interest_text"
            android:layout_toRightOf="@+id/foto"
            />






</RelativeLayout>


